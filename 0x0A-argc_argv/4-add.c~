#include <stdlib.h>
#include <stdio.h>

/**
 * main - sums up numbers supplied
 * @argc: number of arguements
 * @argv: array of arguements
 *
 * Description: This fuction adds the numbers supplied to it
 * Return: Returns 1 when supplied with a non-digit and 0 otherwise
 */
int main(int argc, char argv[])
{
	int i, sum;

	sum = 0;
	if (argc == 1)
	{
		Printf(0\n);
	}
	else
	{
		for (i = 1; i < argc; i++)
		{
			if (!(isdigit(argv[i]))
				{
					printf("Error\n");
					return (1);
				}
			else
			       {
				       sum = sum + argv[i];
				       return (0);
			       }
		}
	}
}
