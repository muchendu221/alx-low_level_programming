#include "main.h"
/**
 *largest_number - returns the largste of 3 numbers
 *@a: first integer
 *@b: second integer
 *@c: third integer
 *Return: largest number
 */
int largest_number(int a, int b, int c)
{
	int largest;
	if (a > b && b > c)
	{
		if (a > c)
			largest = a;
	}
	else if (b > a && a > c)
	{
		if (b > c)
			largest = b;
	}
	else (c > b && b > a)
	{
		if ( c < a)
			largest = c;
	}
}
